<Window x:Class="Blackjack.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Blackjack"
        mc:Ignorable="d"
        Title="♥ ♦ ♠ ♣ Blackjack ♥ ♦ ♠ ♣" Height="800" Width="1200" 
        ResizeMode="NoResize" FontSize="18">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="auto"/>
            <RowDefinition/>
            <RowDefinition Height="auto"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition Width="auto"/>
        </Grid.ColumnDefinitions>

        <Grid.Background>
            <ImageBrush ImageSource="/images/blackjack-background.png"/>
        </Grid.Background>

        <GroupBox Header="Game" Foreground="White" Margin="10" Grid.Column="0" Grid.RowSpan="3">
            <StackPanel>
                <Button Name="newGameButton" Content="New Game" Foreground="White" Background="DarkGreen" BorderBrush="Green" BorderThickness="4" Padding="5" Margin="5" Click="newGameButton_Click"/>
                <Separator/>
                <TextBlock Text="Credits:" Foreground="White"/>
                <TextBlock Name="creditsTextBlock" Foreground="White"/>
            </StackPanel>
        </GroupBox>
        <GroupBox Header="Bank" Foreground="White" Margin="10" Grid.Column="1" Grid.Row="0">
            <StackPanel Orientation="Horizontal" x:Name="bankStack" Margin="5" Width="910" Height="170">

            </StackPanel>
        </GroupBox>
        <Grid Grid.Column="1" Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition/>
                <ColumnDefinition/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>

            <Grid x:Name="resultGrid" Grid.ColumnSpan="3" Panel.ZIndex="1" Visibility="Hidden">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="auto"/>
                    <ColumnDefinition/>
                    <ColumnDefinition Width="auto"/>
                </Grid.ColumnDefinitions>

                <Button Name="stopGameButton" Content="Stop" Grid.Column="0" VerticalAlignment="Bottom" Height="50" Width="100" Foreground="White" Background="DarkRed" BorderBrush="Red" BorderThickness="4" Padding="5" Margin="5" Click="stopGameButton_Click"/>
                <TextBlock VerticalAlignment="Center" HorizontalAlignment="Center" Name="resultTextBlock" Grid.Column="1" Foreground="White"/>
                <Button Name="newRoundButton" Content="Next" Grid.Column="2" VerticalAlignment="Bottom" Height="50" Width="100" Foreground="White" Background="DarkGreen" BorderBrush="Green" BorderThickness="4" Padding="5" Margin="5" Click="newRoundButton_Click"/>
            </Grid>
            <StackPanel Visibility="Hidden" x:Name="playerBetPanel" Grid.Column="0" Width="200" VerticalAlignment="Center">
                <Label Content="Place your bet:" Foreground="White"/>
                <TextBox Name="ceditsInputTextBox" Margin="5"/>
                <Button Name="betPlacedButton" Content="Play" Foreground="White" Background="DarkGreen" BorderBrush="Green" BorderThickness="4" Padding="5" Margin="5" Click="betPlacedButton_Click"/>
            </StackPanel>
            <Grid x:Name="actionsGrid" Grid.Column="1">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition/>
                    <ColumnDefinition/>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition/>
                    <RowDefinition Height="auto"/>
                </Grid.RowDefinitions>

                <Image Grid.ColumnSpan="2" Grid.Row="0" Source="/images/cards/back.png" Margin="5"/>
                <TextBlock Name="remainingCardsTextBlock" Grid.ColumnSpan="2" Grid.Row="0" Foreground="White" VerticalAlignment="Center" HorizontalAlignment="Center"/>
                <Button Visibility="Hidden" Width="100" HorizontalAlignment="Right" Name="cardButton" Content="Card" Grid.Column="0" Grid.Row="1" Foreground="White" Background="DarkGreen" BorderBrush="Green" BorderThickness="4" Padding="5" Margin="5" Click="cardButton_Click"/>
                <Button Visibility="Hidden" Width="100" HorizontalAlignment="left" Name="stopButton" Content="Stop" Grid.Column="1" Grid.Row="1" Foreground="White" Background="DarkRed" BorderBrush="Red" BorderThickness="4" Padding="5" Margin="5" Click="stopButton_Click"/>
            </Grid>
            <TextBlock Text="0" Name="bankPointsTextBlock" Grid.Column="2" Foreground="White" HorizontalAlignment="Right" Margin="10"/>
            <TextBlock Text="0" Name="playerPointsTextBlock" Grid.Column="2" Foreground="White" HorizontalAlignment="Right" VerticalAlignment="Bottom" Margin="10"/>
        </Grid>
        <GroupBox Header="Player" Foreground="White" Grid.Column="1" Grid.Row="2" Margin="10">
            <StackPanel Orientation="Horizontal" x:Name="playerStack" Margin="5" Width="910" Height="170">

            </StackPanel>
        </GroupBox>
    </Grid>
</Window>
